- model_class = Address
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @address.first_name
%p
  %strong= model_class.human_attribute_name(:second_name) + ':'
  %br
  = @address.second_name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @address.last_name
%p
  %strong= model_class.human_attribute_name(:city) + ':'
  %br
  = @address.city
%p
  %strong= model_class.human_attribute_name(:address_line_1) + ':'
  %br
  = @address.address_line_1
%p
  %strong= model_class.human_attribute_name(:address_line_2) + ':'
  %br
  = @address.address_line_2
%p
  %strong= model_class.human_attribute_name(:zip_code) + ':'
  %br
  = @address.zip_code
%p
  %strong= model_class.human_attribute_name(:id_number) + ':'
  %br
  = @address.id_number
%p
  %strong= model_class.human_attribute_name(:personal_number) + ':'
  %br
  = @address.personal_number
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @address.user_id


= link_to t('.back', :default => t("helpers.links.back")), addresses_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_address_path(@address), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), address_path(@address), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
