- model_class = Address
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:first_name)
      %th= model_class.human_attribute_name(:second_name)
      %th= model_class.human_attribute_name(:last_name)
      %th= model_class.human_attribute_name(:city)
      %th= model_class.human_attribute_name(:address_line_1)
      %th= model_class.human_attribute_name(:address_line_2)
      %th= model_class.human_attribute_name(:zip_code)
      %th= model_class.human_attribute_name(:id_number)
      %th= model_class.human_attribute_name(:personal_number)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @addresses.each do |address|
      %tr
        %td= link_to address.id, address_path(address)
        %td= address.first_name
        %td= address.second_name
        %td= address.last_name
        %td= address.city
        %td= address.address_line_1
        %td= address.address_line_2
        %td= address.zip_code
        %td= address.id_number
        %td= address.personal_number
        %td= address.user_id
        %td=l address.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_address_path(address), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), address_path(address), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_address_path, :class => 'btn btn-primary'
